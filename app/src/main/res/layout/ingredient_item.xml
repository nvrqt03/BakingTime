<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="ingredient"
            type="ajmitchell.android.bakingtime.models.Ingredient" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredient_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{ingredient.quantity.toString()"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ingredient_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{ingredient.measure"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ingredient_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{ingredient.ingredient"
            android:textSize="16sp" />

    </LinearLayout>

</layout>